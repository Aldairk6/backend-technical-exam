{
  "compilerOptions": {
    "target": "ES2020",           // Puedes ajustar esto según tu necesidad
    "module": "ESNext",           // Importar/exportar módulos
    "moduleResolution": "node",   // Resolución de módulos como Node.js
    "outDir": "./dist",           // Carpeta de salida de la compilación
    "esModuleInterop": true,      // Para manejar módulos de manera más compatible
    "skipLibCheck": true          // Ignora errores de tipo en las bibliotecas
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
